{
  "root": true,
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nx"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:portal",
                "onlyDependOnLibsWithTags": [
                  "scope:portal",
                  "scope:shared"
                ]
              },
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": [
                  "scope:shared"
                ]
              },
              {
                "sourceTag": "domain:customer",
                "onlyDependOnLibsWithTags": [
                  "domain:customer",
                  "domain:shared"
                ]
              },
              {
                "sourceTag": "type:app",
                "onlyDependOnLibsWithTags": [
                  "type:shell",
                  "type:client",
                  "type:utils",
                  "type:models"
                ]
              },
              {
                "sourceTag": "type:shell",
                "onlyDependOnLibsWithTags": [
                  "type:shell",
                  "type:feature",
                  "type:utils",
                  "type:data-access",
                  "type:layout",
                  "type:models",
                  "type:api"
                ]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": [
                  "type:feature",
                  "type:api",
                  "type:data-access",
                  "type:ui",
                  "type:utils",
                  "type:models"
                ]
              },
              {
                "sourceTag": "type:data-access",
                "onlyDependOnLibsWithTags": [
                  "type:data-access",
                  "type:models",
                  "type:utils",
                  "type:client",
                  "type:api"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": [
                  "type:ui",
                  "type:models",
                  "type:utils"
                ]
              },
              {
                "sourceTag": "type:utils",
                "onlyDependOnLibsWithTags": [
                  "type:models",
                  "type:utils",
                  "type:client"
                ]
              },
              {
                "sourceTag": "type:models",
                "onlyDependOnLibsWithTags": [
                  "type:models",
                  "type:client"
                ]
              },
              {
                "sourceTag": "type:api",
                "onlyDependOnLibsWithTags": [
                  "type:api",
                  "type:models",
                  "type:data-access",
                  "type:utils"
                ]
              },
              {
                "sourceTag": "type:client",
                "onlyDependOnLibsWithTags": []
              },
              {
                "sourceTag": "type:layout",
                "onlyDependOnLibsWithTags": []
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "plugin:@nx/typescript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:@nx/javascript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.spec.ts",
        "*.spec.tsx",
        "*.spec.js",
        "*.spec.jsx"
      ],
      "env": {
        "jest": true
      },
      "rules": {}
    },
    {
      "files": [
        "*.ts"
      ],
      "extends": [
        "plugin:@ngrx/recommended"
      ]
    }
  ]
}